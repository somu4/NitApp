<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EachSubjectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="100dp"
        android:gravity="center"

        >
        <EditText
            android:id="@+id/eachsubjectcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <Button
            android:text="CHANGE"
            android:onClick="changesubjectcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/eachsubjectsubjectname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:text="CHANGE"
            android:layout_width="wrap_content"
            android:onClick="changesubjectname"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/eachsubjectteachername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/eachsubjectteacherid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:text="CHANGE"
            android:onClick="changesubjectteacherid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ProgressBar
            android:id="@+id/eachprogbar"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</RelativeLayout>