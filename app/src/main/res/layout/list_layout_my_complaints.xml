<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp">
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complaint ID : "
            android:layout_gravity="center_vertical"/>

        <TextView

            android:id="@+id/textview_complaint_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complaint ID"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorBlack"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complaint Type : "
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/textview_complaint_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complaint Type"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorBlack"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complaint Date/Time : "
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/textview_complaint_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complaint Date Time"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorBlack"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complaint Description : "
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/textview_complaint_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complaint Description"
            android:textColor="@color/colorBlack"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack"/>

</LinearLayout>