<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nitapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".EachSubjectActivity"
            android:theme="@style/Theme.AppCompat.Dialog.Alert"></activity>
        <activity
            android:name=".SubjectListActivity"
            android:theme="@style/Theme.AppCompat.Dialog.Alert" />
        <activity android:name=".StudentSignUp" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashScreen"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity android:name=".MainActivity" />
        <activity android:name=".ProfessorSignUp" />
    </application>

</manifest>